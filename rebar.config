%% Erlang compiler options
{erl_opts, [debug_info,
            {i, "test"},
            {src_dirs, ["src"]}]}.

{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.

{cover_enabled, true}.

{deps, [
    {erlastic_search, {git, "https://github.com/leeyisoft/erlastic_search.git", {branch, "master"}}}
]}.

{relx, [
    {
        release,
        { es_client, "0.1.0" },
        [es_client, sasl]
    },

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{profiles, [ {
    prod,
    [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]
}]}.
